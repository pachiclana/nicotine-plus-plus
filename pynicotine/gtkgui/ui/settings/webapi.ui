<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.0" />
  <object class="GtkAdjustment" id="_web_api_local_port">
    <property name="lower">1024</property>
    <property name="page-increment">10</property>
    <property name="step-increment">1</property>
    <property name="upper">65535</property>
  </object>
  <object class="GtkAdjustment" id="_web_api_remote_port">
    <property name="lower">1024</property>
    <property name="page-increment">10</property>
    <property name="step-increment">1</property>
    <property name="upper">65535</property>
  </object>
  <object class="GtkBox" id="container">
    <property name="orientation">vertical</property>
    <property name="spacing">12</property>
    <property name="visible">True</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="visible">True</property>
        <child>
          <object class="GtkLabel">
            <property name="halign">start</property>
            <property name="label" translatable="yes">Web API</property>
            <property name="selectable">True</property>
            <property name="visible">True</property>
            <property name="wrap">True</property>
            <property name="xalign">0</property>
            <style>
              <class name="heading" />
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Enable the web API so that third party tools are able to interact with Nicotine</property>
            <property name="margin-bottom">12</property>
            <property name="selectable">True</property>
            <property name="visible">True</property>
            <property name="wrap">True</property>
            <property name="xalign">0</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <property name="visible">True</property>
            <child>
              <object class="GtkLabel">
                <property name="height-request">24</property>
                <property name="hexpand">True</property>
                <property name="label" translatable="yes">Enable Web API</property>
                <property name="mnemonic-widget">web_api_toggle</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkSwitch" id="web_api_toggle">
                <property name="valign">center</property>
                <property name="visible">True</property>
                <!-- <signal name="notify::active" handler="on_toggle_web_api" /> -->
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="homogeneous">True</property>
            <property name="margin-top">6</property>
            <property name="spacing">12</property>
            <property name="visible">True</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Local URL:</property>
                <property name="mnemonic-widget">web_api_local_ip</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">http://</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">1</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="web_api_local_ip">
                <property name="tooltip-text" translatable="yes">The URL that external components must use to send requests.</property>
                <property name="valign">center</property>
                <property name="visible">True</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">:</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">1</property>
                <property name="width-chars">-1</property>
              </object>
            </child>
            <child>
              <object class="GtkSpinButton" id="web_api_local_port">
                <property name="adjustment">_web_api_local_port</property>
                <property name="numeric">True</property>
                <property name="valign">center</property>
                <property name="visible">True</property>
                <property name="xalign">1</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="homogeneous">True</property>
            <property name="margin-top">6</property>
            <property name="spacing">12</property>
            <property name="visible">True</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">Remote URL:</property>
                <property name="mnemonic-widget">web_api_remote_ip</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">0</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">http://</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">1</property>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="web_api_remote_ip">
                <property name="tooltip-text" translatable="yes">The IP that Nicotine must use to send messages.</property>
                <property name="valign">center</property>
                <property name="visible">True</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
                <property name="label">:</property>
                <property name="visible">True</property>
                <property name="wrap">True</property>
                <property name="wrap-mode">word-char</property>
                <property name="xalign">1</property>
                <property name="width-chars">-1</property>
              </object>
            </child>
            <child>
              <object class="GtkSpinButton" id="web_api_remote_port">
                <property name="adjustment">_web_api_remote_port</property>
                <property name="numeric">True</property>
                <property name="valign">center</property>
                <property name="visible">True</property>
                <property name="xalign">1</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>